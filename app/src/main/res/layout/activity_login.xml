<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="attendance.com.pe.attendance.LoginActivity"
    android:background="@mipmap/fondo1">



    <LinearLayout
        android:id="@+id/layoutImg"
        android:layout_marginTop="40dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_circle"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"

        >
        <!--
        android:gravity="center"
            android:layout_below="@id/textViewLoginHeader"
        -->

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/icono"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textViewLoginHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ASISTENCIA"
        android:layout_below="@id/layoutImg"
        android:textSize="14sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-35dp"
        android:layout_marginBottom="20dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="30dp"
        android:layout_marginRight="80dp"
        android:layout_marginEnd="30dp"
        android:background="#ffffff"
        android:layout_below="@id/textViewLoginHeader"
        android:layout_marginTop="240dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        >


        <EditText
            android:id="@+id/textViewLoginUsername"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:hint="User name"
            android:textColorLink="@color/colorSecondary"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/textViewLoginClave"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:hint="Password"
            android:textColorLink="@color/colorSecondary"
            android:textSize="14sp" />

        <Button
            android:id="@+id/butonLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:text="Ingresar"/>


    <!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"/>
    -->
    </LinearLayout>


</RelativeLayout>